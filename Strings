Challenge 2

#include <stdio.h>

int main(){

    char chaine[100];
    int longueur =0;

    printf("entrez une chaine de caracteres svp : ");
    scanf("%s",chaine);

    while (chaine[longueur]!='\0') {
        longueur++;
    
    }
    printf("longueur de %s est : %d ",chaine,longueur);

    return 0;

}

challenge 3

#include <stdio.h>
#include <string.h>

int main(){

    char chaine1[100];
    char chaine2[100];
    char result[200];
    int longueur =0;

    printf("entrez une chaine de caracteres 1 svp : ");
    scanf("%s",chaine1);

    printf("entrez une chaine de caracteres 2 svp : ");
    scanf("%s",chaine2);
    strcat(result, chaine1);
    strcat(result, chaine2);

    printf("la chaîne résultante est :  %s",result);

    return 0;

}


