EXERCISE 9


#include <stdio.h>

int main() {
    int n;
    int count = 0;

    printf("Entrez un entier positif : ");
    scanf("%d", &n);

    if (n == 0) {
        count = 1;   
    } else {
        while (n > 0) {
            n = n / 10; 
            count++;     
        }
    }

    printf("Nombre de chiffres = %d\n", count);

    return 0;
}




EXERCISE 7




#include <stdio.h>

int main(void) {
    int n;
    if (scanf("%d", &n) != 1) return 0;

    if (n < 0) {
        putchar('-'); 
        n = -n;
    }


    if (n == 0) {
        putchar('0');
        return 0;
    }

    while (n > 0) {
        int d = n % 10;   
        printf("%d", d);  
        n /= 10;         
    }

    return 0;
}




EXERCISES 4




#include <stdio.h>

int main() {
    int n ;
    
    printf("enter a number: ");
    scanf("%d",&n);
    for(int i=1 ; i<=n ; i++){
        printf("%d \n",2*i-1);
    }
    

    return 0;
}


EXERCISES 5




#include <stdio.h>

int main() {
    int base,exposant;
    int result =1;
    
    printf("Enter number base: ");
    scanf("%d",&base);
    printf("Enter number exposant: ");
    scanf("%d",&exposant);
    
    for(int i=0; i<exposant;i++){
        result = result * base;
    }
    printf("result of %d ^ %d = %d",base,exposant, result);
    
    
    

    return 0;
}
